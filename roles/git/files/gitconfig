[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  last = log -1 -p HEAD
  # show all branches, even across remotes
  branches = branch -a --color -v
  loggy = log --oneline -p
  graph = log --oneline --graph
  today = log --until=1.minute.ago
  pull = pull --ff-only
  push = push --recurse-submodules=check
  diff = diff --check
